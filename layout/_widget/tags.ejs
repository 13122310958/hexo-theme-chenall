<%if (!UserConfig.cached_widgets.hasOwnProperty('tags')){
    var str = '';
    if (site.tags.length)
    {
	str = '<ul class="list-group">';
	site.tags.sort('name').each(function(item){
	    str += '<li class="list-group-item"><span class="badge">' + item.posts.length + '</span><a href="' + config.root + item.path  + '">' + item.name + '</a></li>';
	});
	str += '</ul>';
    }
    UserConfig.cached_widgets.tags = str;
}
%>
<%- UserConfig.cached_widgets.tags %>
