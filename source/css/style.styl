@import 'nib'

h1,h2,h3,h4,h5,h6
  font-weight bold
  padding-bottom 10px
.carousel-control
  .fa
    position absolute
    top: 50%
    z-index: 5
    display: inline-block
.tags a 
   margin-left: 2px
  
body 
  padding-top: 70px;
  background-color: #fff;


.widget ul .icon:before 
  content: '\f069';
  color: #4141e9;
  font: 12px FontAwesome;


article
  header
    .title
      overflow: hidden;
      overflow-wrap: break-word;
    .icon
      color: #258fb8;
  .post .icon:before 
    content: '\f15c';
  .comment .icon:before 
    content: '\f086';
  .photo .icon:before 
    content: '\f030';
  .link
    .icon:before 
      content: '\f0c1';
    .title a:after 
      content: '\f08e';
      color: #999;
      font: 12px FontAwesome;
      padding-left: 10px;
      vertical-align: super;
  video,img 
    min-width: 0%;
    max-width: 100%;
    height: auto;
    border: none;
  .entry
    hr 
      border-top: 1px solid #080
    h3
      color #080
      margin 40px 0px 10px 0px
      border-left green solid thick
      padding 10px 0px 10px 10px
      background-color #e2e2e2
      font-size 160%
    blockquote
      footer
        cite before
        content "â€”"
        padding 0 0.3em
    code
      white-space: pre
      word-wrap:break-word
      overflow:auto
    .caption
      color: #904;
      display: block;
      font-size: 0.9em;
      margin: 0.5em 0 0.5em;
      position: relative;
      text-align: center;
  .categories .breadcrumb 
    padding: 5px 5px;
    margin-bottom: 0px;
  .categories .breadcrumb>li+li:before 
    padding: 0px 2px;
    content: '/';
  footer 
    padding-top: 10px;
    border-top: 1px solid #333
  a.more-link
    padding-right: 20px;
    padding-top: 10px;
    padding-bottom: 20px;
    color: #880088;
    text-decoration: none;

.widget
  ul>li 
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
#sidebar
  .tagcloud .entry>a 
    padding-left: 5px;
    display: inline-block;
